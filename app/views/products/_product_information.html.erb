<div class= "product-titles">
  <h2 class="text-center"><%= product.designer.brand%></h2>
  <h3 class="text-center"> <%= product.name %> </h3>
</div>
<div class="product-info">
  <strong>Collection:</strong> <%= product.collection.detail %> <br>
  <strong>Comes in sizes:</strong> <%= product.sizes %> <br>
  <strong>Color:</strong> <%= product.color %> <br>
  <em>Detail:</em> <%= product.detail %> <br>
  <em>Wholesale price:</em> $<%= product.price %> - <strong>RRP: $<%= product.price*2 %></strong>
</div>
<div class="btn-add-to-selections">
  <% if StoreProduct.pluck(:product_id).include?(product.id) %>
  <%= simple_form_for :product, url: store_collection_store_product_path(product), method: :delete do |f| %>
      <%= f.submit "Remove", class: "btn-space-station" %>
    <% end %>
  <% else %>
    <%= simple_form_for :product, url: store_collection_store_products_path(product_id: product.id) do |f| %>
      <%= f.submit "Add to Selections", class: "btn-space-station" %>
    <% end %>
  <% end %>
</div>
