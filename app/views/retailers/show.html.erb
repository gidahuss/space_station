<%= render partial: 'shared/banner', locals: {
  primary_header: "",
  secondary_header: "",
  image: "https://images4.alphacoders.com/153/153316.jpg",
  banner_size: "quarter"
} %>


<div class="container">
  <h2 class="text-center">Store Wishlist for <%= @retailer.store_collection.season %> <%= @retailer.store_collection.year %> </h2 class="text-center">
    <div class="row">

      <% @store_products_grouped_by_designer.each do |designer, store_products| %>
        <h3><%= designer.brand %></h3>
        <% store_products.each do |store_product| %>
          <div class="col-xs-12">
            <div class="product-card">
              <table>
                <thead>
                  <tr>
                    <th>
                      product: <%= store_product.product.name %>
                    </th>
                    <th>
                      name
                    </th>
                    <th>
                      detail
                    </th>
                    <th>
                      price
                    </th>
                    <th>
                      form
                    </th>
                    <th>
                      total
                    </th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>
                                  <%= image_tag store_product.product.picture_1, height: 100, width: 100, crop: :fill %>

                    </td>
                    <td>
                      <p><%= store_product.product.name %></p>

                    </td>
                    <td>

                      <p><%= store_product.product.detail %></p>
                    </td>
                    <td>
                      34 euros
                    </td>
                    <td>
                      button
                    </td>
                    <td>
                      235432 euros
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        <% end %>
      <% end %>

    </div>
  </div>
