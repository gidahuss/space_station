  <div class="row designercard">

    <% products = designer.products.sample(3) %>
    <% products.each do |product| %>
    <div class="col-xs-6 col-md-3">
      <%= link_to designer_product_path(designer, product) do %>
      <div class="product-image" style="background-image:url('<%= image_path product.picture_1 %>');"></div>
      <% end %>
    </div>
    <% end %>


    <div class="col-xs-6 col-md-3">
      <%= link_to designer_path(designer) do %>
      <div class="avatar">
        <div class="brand-avatar" style="background-image:url('<%= image_path designer.profile_picture %>');">
        </div>
      </div>
      <div class="brandname">
        <%= designer.brand %>
      </div>
      <% end %>
    </div>
  </div>
