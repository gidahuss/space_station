<div class="navbar-space-station">
  <div class="navbar-group-left">

    <% if retailer_signed_in? %>

    <ul class="list-inline flex-inline">
      <li>
        <div class="dropdown">
          <div class="avatar dropdown-toggle" style="background-image:url('<%= image_path retailer_avatar_url(current_retailer) %>');" data-toggle="dropdown"></div>

          <ul class="dropdown-menu dropdown-menu-left navbar-space-station-dropdown-menu">
            <li>
              <%= link_to "#" do %>
              <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
              <i class="fa fa-home"></i>  <%= t(".profile", default: "Account") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_retailer_session_path, method: :delete do %>
              <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </li>
      <li>
        <%= link_to "#", class: "space-station-navbar-link", "data-balloon" =>"Invitations", "data-balloon-pos" => "down" do %>
        <i class="fa fa-star" aria-hidden="true"></i>
        <% end %>
      </li>
      <li>
        <%= link_to "#", class: "space-station-navbar-link", "data-balloon" =>"Messages", "data-balloon-pos" => "down" do %>
        <i class="fa fa-comments" aria-hidden="false"></i>
        <% end %>
      </li>
      <li>
        <%= link_to "#", class: "space-station-navbar-link", "data-balloon" =>"Notifs", "data-balloon-pos" => "down" do %>
        <i class="fa fa-flag" aria-hidden="true"></i>
        <% end %>
      </li>
    </ul>

    <% elsif designer_signed_in? %>

    <ul class="list-inline flex-inline">
      <li>
        <div class="dropdown">
          <div class="avatar dropdown-toggle" style="background-image:url('<%= image_path retailer_avatar_url(current_designer) %>');" data-toggle="dropdown"></div>

          <ul class="dropdown-menu dropdown-menu-left navbar-space-station-dropdown-menu">
            <li>
              <%= link_to current_designer do %>
              <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
              <i class="fa fa-home"></i>  <%= t(".profile", default: "Account") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_designer_session_path, method: :delete do %>
              <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </li>
      <li>
        <%= link_to "Invitations", "#", class: "space-station-navbar-link" do %>
        <i class="fa fa-star" aria-hidden="true"></i>
        <% end %>
      </li>
      <li>
        <%= link_to "Messages", "#", class: "space-station-navbar-link" do %>
        <i class="fa fa-comments" aria-hidden="false"></i>
        <% end %>
      </li>
      <li>
        <%= link_to "Notifs","#", class: "space-station-navbar-link" do %>
        <i class="fa fa-flag" aria-hidden="true"></i>
        <% end %>
      </li>
    </ul>

    <% else %>
    <ul class="list-inline">
      <li>
        <%= link_to "Buyers", buyers_path, class: "space-station-navbar-link"  %>
      </li>
      <li>
        <%= link_to "Designers", designers_path, class: "space-station-navbar-link"  %>
      </li>
      <li>
        <%= link_to "About us", about_path, class: "space-station-navbar-link"  %>
      </li>
    </ul>
    <% end %>
  </div>

  <div class="logo">
    <%= link_to root_path do %>
    <%= image_tag 'space_station.png' %>
    <% end %>
  </div>
  <div class= "navbar-group-right">


   <% if retailer_signed_in? %>
   <!-- Links when logged in -->
   <!-- Avatar with dropdown menu -->
   <div class="navbar-space-station-item navbar-collection">
    <ul class="list-inline">
      <li>
        <%= link_to "My Designers", "#", class: "space-station-navbar-link"  %>
      </li>
      <li>
        <%= link_to "Orders", "#", class: "space-station-navbar-link"  %>
      </li>
      <li>
        <%= link_to "Selections", retailer_path, class: "space-station-navbar-link"  %>
      </li>
      <li>
        <%= link_to "#", class: "space-station-navbar-link" do %>
        <i class="fa fa-shopping-cart"></i>
        <% end %>
      </li>
      <li>
        <div class="dropdown">
          <%= link_to "Help", "#", class: "space-station-navbar-link dropdown-toggle", "data-toggle" => "dropdown"  %>
          <ul class="dropdown-menu dropdown-menu-right navbar-space-station-dropdown-menu">
            <li>
              <%= link_to faq_path do %>
              <i class="fa fa-user"></i> <%= t(".profile", default: "FAQ") %>
              <% end %>
            </li>
            <li>
              <%= link_to live_chat_path do %>
              <i class="fa fa-home"></i>  <%= t(".profile", default: "Live Chat") %>
              <% end %>
            </li>
          </ul>
        </div>
      </li>
    </ul>
  </div>

  <% elsif designer_signed_in? %>
   <!-- Links when logged in -->
   <!-- Avatar with dropdown menu -->
   <div class="navbar-space-station-item navbar-collection">
    <ul class="list-inline">
      <li>
        <%= link_to "Orders", "#", class: "space-station-navbar-link"  %>
      </li>
      <li>
        <%= link_to "Collections", "#", class: "space-station-navbar-link"  %>
      </li>
      <li>
        <%= link_to "#", class: "space-station-navbar-link" do %>
        <i class="fa fa-shopping-cart"></i>
        <% end %>
      </li>
      <li>
        <div class="dropdown">
          <%= link_to "Help", "#", class: "space-station-navbar-link dropdown-toggle", "data-toggle" => "dropdown"  %>
          <ul class="dropdown-menu dropdown-menu-right navbar-space-station-dropdown-menu">
            <li>
              <%= link_to faq_path do %>
              <i class="fa fa-user"></i> <%= t(".profile", default: "FAQ") %>
              <% end %>
            </li>
            <li>
              <%= link_to live_chat_path do %>
              <i class="fa fa-home"></i>  <%= t(".profile", default: "Live Chat") %>
              <% end %>
            </li>
          </ul>
        </div>
      </li>
    </ul>
  </div>


  <% else %>
  <!-- Login link (when logged out) -->
  <%= link_to t(".sign_in", default: "Login"), new_retailer_session_path, class: "space-station-navbar-link" %>
  <%= link_to "Request membership", new_retailer_registration_path, class: "btn-space-station"  %>
  <% end %>
</div>
</div>
</div>

