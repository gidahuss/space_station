

<div class= "designers-search-display">

<div class = "search-col-container">
  <center>
   <h4>Regions</h4>
 </center>
  <ul>
    <li>Africa</li>
    <li>Asia</li>
    <li>North America</li>
    <li>Central America</li>
    <li>South America</li>
    <li>Middle East</li>
    <li>Europe</li>
    <li>Oceania</li>
  </ul>

<center>
  <h4>Categories</h4>
</center>
  <ul>
    <% Category.all.each do |category| %>
      <li> <%= link_to category.title, category_path(category)  %> </li>
    <% end %>
  </ul>
</center>


<center>
    <h4>Styles</h4>
  </center>
  <ul>
    <li>Bohemian</li>
    <li>Dandy</li>
    <li>Minimalist</li>
    <li>Smart</li>
    <li>Casual/Street</li>
    <li>Couture</li>
    <li>Vintage</li>
    <li>Preppy</li>
    <li>Androgynous</li>
  </ul>
</div>


<div class="designer-container">
  <div class="row">
    <div class="col-xs-12">
      <center>
      <h1>All Designers</h1>
    </center>
    </div>
  </div>
  <!-- For all designers -> make a designer card -->
  <div class="row">
    <% @designers.each do |d| %>
    <div class="col-xs-12 col-md-6">
      <%= render 'shared/designercard', designer: d %>
    </div>
    <% end %>
  </div>
</div>

</div>
