<div class="first-section">

  <h2>
    <%=@designer.first_name %> <%= @designer.last_name %>
  </h2>
  <ul class="list-unstyled bio-box">
    <li class="brand">
      <%= @designer.brand %>
   </li>
   <li>
     <span class="city"><%= @designer.city %></span> - <span class="year"><%= @designer.age %></span>
   </li>
  <li class="description">
    <p class="long-text">
      <%= truncate @designer.detail, length: 150 %>
    </p>
  </li>
</ul>

  <div class="bio-image" style="background-image:url('<%= image_path @designer.profile_picture %>');">
  </div>


</div>

