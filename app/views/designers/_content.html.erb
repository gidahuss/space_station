  <h2 class="text-center">
    Hello world
  </h2>
  <p class="long-text">
    <%= prettify_text(@designer.detail).html_safe %>
  </p>
  <div class="cards-container">
    <h2>Current collection: </h2>
    <div class="row">
      <% @designer.products.each do |product| %>
      <div class="col-xs-12 col-lg-3">
        <%= link_to designer_product_path(@designer, product) do %>
        <div class="product-card">
          <div class="product-image" style="background-image:url('<%= image_path product.picture_1, height: 200, crop: :fill %>');"></div>
          <div class="product-details">
            <p><%= product.name %></p>
            <p><%= product.detail %></p>
          </div>
        </div>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
