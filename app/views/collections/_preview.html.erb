<em>
  <h5><%= collection.detail.capitalize %> </h5>
</em>
<div class="products-grid">
  <div class="row">
    <% collection.products.each do |product| %>
      <div class="col-xs-12 col-lg-4">
        <%= link_to designer_product_path(collection.designer, product) do %>
          <div class="product-card product-card-high">
            <div class="product-image" style="background-image:url('<%= image_url product.picture_1, crop: :fill %>');"></div>
            <div class="product-details">
              <p> <strong> <%=product.name%> </strong> <%= truncate product.detail, length: 100%></p>
              $<%= product.price %>
            </div>
          </div>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
