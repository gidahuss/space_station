  banner_size: "full"
} %>
<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <center><h1>Featured Designers</h1></center>
    </div>
  </div>
  <div class="row">
    <% @designers.sample(3).each do |d| %>
